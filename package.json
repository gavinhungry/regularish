{
  "name": "regularish",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild app.jsx --bundle --minify --sourcemap --outfile=app.bundle.js --loader:.js=jsx",
    "serve": "python -m http.server 8080",
    "deploy": "dotenv -- sh -c 'scp app.bundle.js{,.map} app.css index.html favicon.svg ${DEPLOY_TARGET}'"
  },

  "dependencies": {
    "react": "19.2.x",
    "react-dom": "19.2.x"
  },

  "devDependencies": {
    "dotenv-cli": "11.0.x",
    "esbuild": "0.27.x"
  }
}
